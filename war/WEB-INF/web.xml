<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
  <servlet>
    <servlet-name>CampusReaderWriter</servlet-name>
    <servlet-class>com.campusreaderwriter.CampusReaderWriterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CampusReaderWriter</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AJAXWriter</servlet-name>
    <servlet-class>com.campusreaderwriter.AJAXWriterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AJAXWriter</servlet-name>
    <url-pattern>/AJAXWriter</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PostAssessment</servlet-name>
    <servlet-class>com.campusreaderwriter.PostAssessmentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostAssessment</servlet-name>
    <url-pattern>/PostAssessment</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>prefs</servlet-name>
    <servlet-class>com.campusreaderwriter.PrefsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>prefs</servlet-name>
    <url-pattern>/prefs</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>prefs</web-resource-name>
      <url-pattern>/prefs</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>